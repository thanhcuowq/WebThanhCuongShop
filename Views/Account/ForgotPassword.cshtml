@{
    ViewBag.Title = "Quên mật khẩu";
}
<div class="row justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <div class="text-center mb-3">
                    <span style="font-size:2.5rem;color:#0d6efd;"><i class="bi bi-lock"></i></span>
                    <h3 class="mt-2 mb-1">Quên mật khẩu?</h3>
                    <p class="text-muted mb-0" style="font-size:1rem;">Nhập <b>email</b> hoặc <b>số điện thoại</b> đã đăng ký để nhận lại mật khẩu mới.</p>
                </div>
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label">Email hoặc Số điện thoại</label>
                        <input type="text" name="emailOrPhone" class="form-control" placeholder="Nhập email hoặc số điện thoại của bạn" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Gửi lại mật khẩu</button>
                </form>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3 text-center">@ViewBag.Error</div>
                }
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success mt-3 text-center">@ViewBag.Message</div>
                }
            </div>
        </div>
    </div>
</div>

