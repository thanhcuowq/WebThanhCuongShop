@{
    ViewData["Title"] = "Đổi mật khẩu";
}
<div class="container py-5 d-flex justify-content-center align-items-center" style="min-height:70vh;">
    <div class="card shadow-lg p-4" style="max-width:420px; width:100%; border-radius:18px;">
        <div class="text-center mb-4">
            <div class="rounded-circle bg-warning bg-opacity-10 d-inline-flex align-items-center justify-content-center mb-2" style="width:70px;height:70px;">
                <i class="bi bi-key text-warning" style="font-size:2.5rem;"></i>
            </div>
            <h3 class="fw-bold mb-0" style="color:#f59e42;">Đổi mật khẩu</h3>
        </div>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }
        <form method="post">
            <div class="mb-3">
                <label class="form-label fw-semibold">Mật khẩu cũ</label>
                <input type="password" class="form-control rounded-3" name="OldPassword" required />
            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold">Mật khẩu mới</label>
                <input type="password" class="form-control rounded-3" name="NewPassword" required />
            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold">Xác nhận mật khẩu mới</label>
                <input type="password" class="form-control rounded-3" name="ConfirmPassword" required />
            </div>
            <button type="submit" class="btn btn-warning w-100 fw-bold text-white">Đổi mật khẩu</button>
            <a href="/Account/Profile" class="btn btn-outline-secondary w-100 mt-2">Về thông tin tài khoản</a>
        </form>
    </div>
</div> 