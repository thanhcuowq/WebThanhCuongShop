    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        $(function() {
            // Lấy userName từ session Razor
            var userName = '@(Context.Session.GetString("UserName") ?? "")';
            if (userName) {
                // Kết nối tới SignalR Hub
                var connection = new signalR.HubConnectionBuilder()
                    .withUrl("/orderHub")
                    .build();
                connection.start().then(function() {
                    // Đăng ký userName với server nếu cần (nếu dùng UserId mapping)
                });
                // Lắng nghe sự kiện xác nhận đơn hàng
                connection.on("OrderConfirmed", function(orderId) {
                    showOrderConfirmedModal(orderId);
                });
            }
        });
        // Hàm hiển thị modal thông báo realtime
        function showOrderConfirmedModal(orderId) {
            if (document.getElementById('orderConfirmedModalRealtime')) return;
            var modalHtml = `
            <div class="modal fade show" id="orderConfirmedModalRealtime" tabindex="-1" aria-modal="true" role="dialog" style="display:block; background:rgba(0,0,0,0.35);z-index:2000;">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content border-success shadow-lg">
                        <div class="modal-header bg-success text-white">
                            <h5 class="modal-title"><i class="bi bi-check-circle-fill me-2"></i>Đặt hàng thành công!</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close" onclick="closeOrderConfirmedModalRealtime()"></button>
                        </div>
                        <div class="modal-body text-center">
                            <p class="fs-5 mb-2">Đơn hàng <b>#${orderId}</b> của bạn đã được xác nhận thành công!</p>
                            <p>Chúng tôi sẽ liên hệ với bạn để giao hàng sớm nhất.<br>Cảm ơn bạn đã mua hàng tại <b>ThanhCuongShop</b>.</p>
                        </div>
                        <div class="modal-footer justify-content-center">
                            <button type="button" class="btn btn-success px-4" onclick="closeOrderConfirmedModalRealtime()">Đóng</button>
                        </div>
                    </div>
                </div>
            </div>`;
            $("body").append(modalHtml);
            setTimeout(closeOrderConfirmedModalRealtime, 10000);
        }
        function closeOrderConfirmedModalRealtime() {
            var modal = document.getElementById('orderConfirmedModalRealtime');
            if(modal) modal.remove();
        }
    </script>
