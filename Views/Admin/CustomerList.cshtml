@model List<ThanhCuongShop.Models.User>
@{
    ViewData["Title"] = "Danh sách khách hàng";
}
<div class="container py-5">
    <h2 class="mb-4 text-center text-primary"><i class="bi bi-people me-2"></i>Danh sách khách hàng</h2>
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Email</th>
                <th>Số điện thoại</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i+1)</td>
                    <td>@Model[i].Email</td>
                    <td>@Model[i].PhoneNumber</td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Admin" class="btn btn-secondary mt-3">Quay lại</a>
</div> 