@{
    ViewData["Title"] = "Báo cáo doanh thu theo thời gian";
}
<h2 class="mb-4 text-center text-warning">Báo cáo doanh thu theo thời gian</h2>
<form method="get" class="row g-3 mb-4 justify-content-center">
    <div class="col-auto">
        <label for="fromDate" class="form-label">Từ ngày:</label>
        <input type="date" id="fromDate" name="fromDate" class="form-control" value="@ViewBag.FromDate" />
    </div>
    <div class="col-auto">
        <label for="toDate" class="form-label">Đến ngày:</label>
        <input type="date" id="toDate" name="toDate" class="form-control" value="@ViewBag.ToDate" />
    </div>
    <div class="col-auto align-self-end">
        <button type="submit" class="btn btn-warning">Xem báo cáo</button>
    </div>
</form>
<div class="alert alert-info text-center">
    <b>Tổng doanh thu:</b> <span class="fs-4 text-success">@String.Format("{0:N0}", ViewBag.TotalRevenue) VNĐ</span>
</div> 